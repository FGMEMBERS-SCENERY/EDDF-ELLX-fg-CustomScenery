<?xml version="1.0"?>

<PropertyList>

	<path>ELLX_lightpole.ac</path>

  <animation>
    <type>material</type>
    <object-name>light-faces-lit</object-name>
      <object-name>light-faces</object-name>
    <condition>
      <greater-than>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.5</value>
      </greater-than>
    </condition>
    <emission>
      <red>   0.5 </red>
      <green> 0.5 </green>
      <blue>  0.5 </blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>light-faces-lit</object-name>
      <object-name>light-faces</object-name>
    <condition>
      <less-than-equals>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.50</value>
      </less-than-equals>
    </condition>
    <emission>
      <red>   0.0 </red>
      <green> 0.0 </green>
      <blue>  0.0 </blue>
    </emission>
  </animation>

      <animation>
            <type>light</type>
            <light-type>spot</light-type>
            <name>LightSrc</name>
            <object-name>Cone</object-name>
            <nopreview/>
            <position>
                  <x>0.0</x>
                  <y>16.373</y>
                  <z>19</z>
            </position>
            <direction>
                  <x>0</x>
                  <y>-35</y>
                  <z>-0</z>
            </direction>
            <ambient>
                  <r>0.2</r>
                  <g>0.2</g>
                  <b>0.2</b>
                  <a>1.0</a>
            </ambient>
            <diffuse>
                  <r>0.7</r>
                  <g>0.7</g>
                  <b>0.6</b>
                  <a>1.0</a>
            </diffuse>
            <specular>
                  <r>0.7</r>
                  <g>0.7</g>
                  <b>0.7</b>
                  <a>1.0</a>
            </specular>
            <attenuation>
                  <c>1.0</c>
                  <l>0.002</l>
                  <q>0.00005</q>
            </attenuation>
            <exponent>5.0</exponent>
            <cutoff>200</cutoff>
            <near-m>1</near-m>
            <far-m>500</far-m>
      </animation>

      <animation>
            <type>select</type>
            <object-name>LightSrc</object-name>
            <condition>
                  <and>
                        <property>/sim/rendering/rembrandt/enabled</property>
                        <greater-than>
                              <property>/sim/rendering/shaders/lights</property>
                              <value>0</value>
                        </greater-than>
                        <greater-than>
                              <property>/sim/time/sun-angle-rad</property>
                              <value>1.50</value>
                        </greater-than>
                  </and>
            </condition>
      </animation>

	<animation>
		<type>range</type>
		<object-name>light-pole</object-name>
		<min-m>0</min-m>
		<max-m>8000</max-m>
	</animation>

</PropertyList>
